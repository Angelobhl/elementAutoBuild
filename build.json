{
  "pageName": "Comments",
  "langKey": "comments",
  "langPareng": "information",
  "page": {
    "title": "资讯评论",
    "search": {
      "use": true,
      "autoSearch": false,
      "model": "formSearch",
      "field": [
        {
          "elem": "input",
          "placeholder": "请输入评论内容",
          "model": "content",
          "default": "''"
        },
        {
          "elem": "input",
          "placeholder": "请输入资讯标题",
          "model": "informationId",
          "default": "''"
        },
        {
          "elem": "input",
          "placeholder": "请输入评论者昵称",
          "model": "uid",
          "default": "''"
        },
        {
          "elem": "input",
          "placeholder": "请输入评论者IP",
          "model": "ip",
          "default": "''"
        }
      ],
      "action": [
        {
          "title": "隐藏选中项",
          "click": "fEditOne({})",
          "type": "primary",
          "action": "hideBtn"
        }
      ]
    },
    "table": {
      "userPagination": true,
      "pageInfo": "pageInfo",
      "loading": "listLoading",
      "model": "tableLists",
      "fields": [
        {
          "label": "评论内容",
          "type": "string",
          "prop": "content"
        },
        {
          "label": "评论者昵称",
          "type": "string",
          "prop": "nickname"
        },
        {
          "label": "评论者IP",
          "type": "string",
          "prop": "ip"
        },
        {
          "label": "资讯标题",
          "type": "string",
          "prop": "title"
        },
        {
          "label": "时间",
          "type": "string",
          "prop": "createDate"
        },
        {
          "label": "操作",
          "type": "action",
          "scope": "scope",
          "lang": "common.tableActin",
          "action": [
            {
              "title": "禁言",
              "click": "fBanOne(scope.row)",
              "action": "ban"
            },
            {
              "title": "隐藏",
              "click": "fHideOne(scope.row)",
              "action": "hide"
            },
            {
              "title": "显示",
              "click": "fUnhideOne(scope.row)",
              "action": "unhide"
            }
          ]
        }
      ]
    },
    "dialog": {
      "addTitle": "添加资讯",
      "editTitle": "编辑资讯",
      "model": "formData",
      "field": [
        {
          "label": "作者",
          "elem": "input",
          "placeholder": "请输入作者名字",
          "model": "anchor",
          "default": "''"
        },
        {
          "label": "资讯标题",
          "elem": "input",
          "placeholder": "最好控制在60个字",
          "model": "title",
          "default": "''"
        },
        {
          "label": "关联分类",
          "elem": "select",
          "placeholder": "请选择游戏分类",
          "model": "gameId",
          "default": "''",
          "source": "aGames"
        },
        {
          "label": "是否置顶",
          "elem": "radio",
          "placeholder": "",
          "model": "top",
          "default": "1",
          "source": "aTopStatus"
        },
        {
          "label": "权重",
          "elem": "inputNumber",
          "placeholder": "",
          "model": "weight",
          "default": "0",
          "max": "",
          "min": "0"
        },
        {
          "label": "是否链接外部资源",
          "elem": "radio",
          "placeholder": "",
          "model": "thirdLink",
          "default": "1",
          "source": "aTopStatus"
        },
        {
          "label": "资讯内容",
          "elem": "input",
          "placeholder": "",
          "model": "content",
          "default": "''"
        }
      ]
    }
  },
  "js": {
    "name": "informationComments"
  },
  "source": [
  ]
}